TestSuite 1 {	
	browser.open()
	browser.goTo("http://www.imt-atlantique.fr/fr")
	page.contains(link(content:"Toutes les actualités"))
}

TestSuite 2 {	
	browser.open()
	browser.goTo("http://www.imt-atlantique.fr/fr")
	link(content:"Toutes les actualités").click()
	//ou 
	//actuLink =link(label:"Toutes les actualités")
	//actuLink.click()
	page.contains(link(content:"Accueil"))
}

TestSuite 3 {
	browser.open()
	browser.goTo("http://www.imt-atlantique.fr/fr")
	link(label:"Toutes les actualités").click()
	image(alt:"Accueil").click()
	page.contains(link(content:"Toutes les actualités"))
}

TestSuite 4 {
	browser.open()
	browser.goTo("http://www.imt-atlantique.fr/fr/echercher")
	field(id:"edit-rechercher").fill("Donald Trump")
	button(value:"Appliquer les filtres").click()
	page.contains(div(content:"Toutes les actualités"))
}

TestSuite 5 {
	browser.open()
	browser.goTo("http://www.imt-atlantique.fr/fr/formation/trouver-ma-formation")
	checkbox(ALL).check()
	checkbox(label:"Anglais"|"A domicile"|"Temps plein")
	button(value:"Appliquer les critéres").click()
	page.contains(div(content:"No found course matching your criteria."))

}

TestSuite 6 {
	browser.open()
	browser.goTo("http://www.imt-atlantique.fr/fr/rechercher")
	field(label:"Rechercher").write("2007")
	select(label:"Période de publication").select("Le mois dernier")
	button(value:"Appliquer les filtres").click()
	page.contains(div(content:"Aucun résultat ne correspond à votre recherche."))
}

TestSuite 7 {
	browser.open()
	browser.goTo("http://www.imt-atlantique.fr/fr")
	title(class:"actu_home_ctner_inner_cell1_titre"[1]).click()
	page.contains(title(class:"actu_home_ctner_inner_cell1_titre"))
}






